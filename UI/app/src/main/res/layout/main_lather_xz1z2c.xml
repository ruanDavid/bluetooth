<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:id="@+id/latherxz1z2c_X"
                android:text="X"
                android:textSize="50sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:id="@+id/latherxz1z2c_Z1"
                android:text="Z1"
                android:textSize="50sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:id="@+id/latherxz1z2c_Z2"
                android:text="Z2"
                android:textSize="50sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:id="@+id/latherxz1z2c_C"
                android:text="C"
                android:textSize="50sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/latherxz1z2c_X_value"
                android:text="0.000"
                android:textSize="50sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:gravity="right"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/latherxz1z2c_Z1_value"
                android:text="0.000"
                android:textSize="50sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:gravity="right"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/latherxz1z2c_Z2_value"
                android:text="0.000"
                android:textSize="50sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:gravity="right"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/latherxz1z2c_C_value"
                android:text="0.00"
                android:textSize="50sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:gravity="right"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>